<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/frame_summery"
        android:name="com.toma_z.habittrack.fragment.SummeryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/frame_detail"
        android:name="com.toma_z.habittrack.fragment.DetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/frame_calendar"
        android:name="com.toma_z.habittrack.fragment.CalendarFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
